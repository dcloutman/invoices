{% extends "_base.jinja" %}
{% block docTitle %}Invoice View{% endblock %}
{% block pageInterface %}
	<section id="invoice_masthead">
		<header>
			<h1>Invoice #{{ invoice_number }} for {{ period_start_date }} - {{ period_end_date }}</h1>
		</header>
	</section>
	<section id="invoice_items">
		<table cellpadding="0" cellspacing="0" border="0">
			<thead>
				<tr>
					<th>Quantity</th>
					<th>Description</th>
					<th>Unit Price</th>
					<th>Cost</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
				</tr>
			</tbody>
		</table>
	</section>
	<section id="invoice_tallies">
	</section>
{% endblock %}
